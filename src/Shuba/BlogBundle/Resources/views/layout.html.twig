{% extends "::base.html.twig" %}

    {% block title %}Blog{% endblock %}

    {% block stylesheets %}
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('css/blog.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/shubablog/css/style.css') }}" rel="stylesheet">

        <link href="{{ asset('bundles/shubablog/js/common.js') }}" rel="stylesheet" />


        <script src="{{ asset('bundles/shubablog/js/jquery.js') }}" ></script>
        <script src="{{ asset('bundles/shubablog/js/common.js') }}" ></script>

    {% endblock %}

    {% block jsHead %}
        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script type="text/javascript" src="{{ asset('js/bootstrap.ie9.js') }}"></script>
        <![endif]-->
    {% endblock %}

    {% block body %}

        {% block menu %}
            {% include 'ShubaBlogBundle::menu.html.twig' %}
        {% endblock %}

        <div class="container">
            <div class="row">

                <div class="col-sm-8 blog-main">
                    {% block content %}
                    {% endblock %}
                </div><!-- /.blog-main -->

                {% block rightsidebar %}
                    {% include 'ShubaBlogBundle::rightsidebar.html.twig' %}
                {% endblock %}

            </div><!-- /.row -->
        </div><!-- /.container -->

        {% block footer %}
            {% include 'ShubaBlogBundle::footer.html.twig' %}
        {% endblock %}

    {% endblock %}

    {% block jsAfterBody %}
        <script type="text/javascript" src="{{ asset('js/jquery.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
    {% endblock %}